{
  "compilerOptions": {
    "allowJs": true,
    "module": "commonjs",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "rootDir": "src",
    "outDir": "dist",
    "target": "ES6",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "paths": {
      "*": ["node_modules/*"]
    },
    "jsx": "react",
    "lib": [
			"DOM",
			"ES6",
      "ES2020",
      "WebWorker",
      "DOM.Iterable"
		]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    ".webpack/**/*"
  ]
}

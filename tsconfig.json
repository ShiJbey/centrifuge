{
    "compilerOptions": {
        "strict": true,
        "allowJs": true,
        "module": "commonjs",
        "skipLibCheck": true,
        "esModuleInterop": true,
        "noImplicitAny": true,
        "sourceMap": true,
        "baseUrl": "./",
        "rootDir": "./",
        "outDir": "dist",
        "target": "ES6",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "react",
        "lib": ["DOM", "ES6", "ES2020"],
        "paths": {
            "src/*": ["src/*"]
        }
    },
    "include": ["./src/**/*.ts", "./src/**/*.tsx"]
}
